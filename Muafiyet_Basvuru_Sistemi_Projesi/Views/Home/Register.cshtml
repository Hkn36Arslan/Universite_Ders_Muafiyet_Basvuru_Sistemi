@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Öğrenci Kayıt Sayfası</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/Login-Register.css">
</head>

<body>

    <div class="form-container">
        <div class="form-header">
            <img src="/image/EtuLogo.png" />
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    <ul>
                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@modelError.ErrorMessage</li>
                        }
                    </ul>


                </ul>
            </div>
        }

        <form id="registerForm" method="post" autocomplete="off" enctype="multipart/form-data">
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-id-card"></i>
                    </span>
                    <input type="text" class="form-control" name="TCKimlik" id="TCKimlik" placeholder="T.C. Kimlik No" required />
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input type="email" class="form-control" name="Mail" id="Mail" placeholder="Email" required />
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input type="password" class="form-control" name="Parola" id="Parola" placeholder="Şifre" required />
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            </div>
            <div class="form-footer">
                <p>Zaten bir hesabınız var mı? <a asp-action="Index">Giriş Yap</a></p>
            </div>
        </form>
    </div>

    <script>
        var inputElement = document.getElementById("TCKimlik");

        inputElement.addEventListener("input", function () {

            var value = this.value;

            if (value.length != 11 || !isNumeric(value)) {
                this.setCustomValidity("TC Kimlik numarası 11 haneli olmalı ve sadece rakamlardan oluşmalıdır.");
            } else {
                // Hata mesajını temizle
                this.setCustomValidity("");
            }
        });

        // Girilen değerin sadece rakamlardan oluşup oluşmadığını kontrol etmek için fonksiyon
        function isNumeric(str) {
            return /^\d+$/.test(str);
        }

    </script>

    <!-- Bootstrap Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/bootstrap-icons.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


</body>

</html>
