@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <title>Öğrenci Giriş Sayfası</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/Login-Register.css">
</head>

<body>

<div class="form-container">
    <div class="form-header">
        <h6>Öğrenci Giriş Ekranı</h6>
        <img src="/image/EtuLogo.png">
    </div>
    <form id="loginForm" method="post" autocomplete="off">
        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-envelope"></i>

                </span>
                <input type="email" class="form-control" name="Mail" id="Mail" placeholder="Email" required />
            </div>
        </div>
        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-lock"></i>
                </span>
                <input type="password" class="form-control" name="Parola" id="Parola" placeholder="Şifre" required />
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </div>
        <div style="flex-direction:column;" class="form-footer">
            <p>Kayıtlı değil misiniz? <a asp-action="Register">Kaydol</a>
            </p>
            <a style="color:#0d6efd;text-decoration:none;border:1px solid blue;padding:0 10px;border-radius:6px;"href="~/Admin/AdminLogin">Yönetici Girişi</a>
        </div>
    </form>
</div>

   

    <!-- Bootstrap Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/bootstrap-icons.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
